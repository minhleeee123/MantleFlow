// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  walletAddress String    @unique
  email         String?   // [NEW] Thêm trường email (optional)
  createdAt     DateTime  @default(now())
  triggers      Trigger[]
  transactions  Transaction[]
}

model Trigger {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  symbol      String   // BTC, ETH, SOL
  targetPrice Float    // Target price in USD
  condition   String   // ABOVE or BELOW
  amount      Float    // Amount in USDT
  type        String   // BUY or SELL
  
  smartConditions Json? // Smart conditions from AI parsing
  
  status      String   @default("ACTIVE") // ACTIVE, EXECUTED, CANCELLED
  createdAt   DateTime @default(now())
  
  executions  Execution[]
  
  @@index([userId, status])
}

model Execution {
  id            String   @id @default(uuid())
  triggerId     String
  trigger       Trigger  @relation(fields: [triggerId], references: [id], onDelete: Cascade)
  
  symbol        String
  price         Float
  amount        Float
  type          String
  
  txHash        String?
  status        String   // PENDING, SUCCESS, FAILED
  errorMessage  String?
  
  executedAt    DateTime @default(now())
  
  @@index([triggerId])
}

model Transaction {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  type        String   // DEPOSIT, WITHDRAW
  token       String   // USDC, MNT
  amount      Float
  txHash      String?
  status      String   @default("SUCCESS")
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
}
